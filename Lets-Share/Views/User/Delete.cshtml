@model Lets_Share.Models.AddUser
@{
    ViewBag.Title = "Delete";
}
<!-- Modal -->
<div class="container">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastro de Usuário</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <form method="post" asp-controller="User" asp-action="Delete">
                <div class="modal-body">


                    <div asp-validation-summary="All"></div>

                    <div class="form-group">
                        <label asp-for="FullName">Nome completo</label>
                        <input class="form-control" placeholder="Nome completo" asp-for="FullName" />
                        <span asp-validation-for="FullName"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Mail">Email</label>
                        <input class="form-control" placeholder="Email" asp-for="Mail" />
                        <span asp-validation-for="Mail"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone">Telefone</label>
                        <input class="form-control" placeholder="Telefone" asp-for="Phone" />
                        <span asp-validation-for="Phone"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Remover</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>

    </div>
</div>

