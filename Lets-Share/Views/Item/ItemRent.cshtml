@model Lets_Share.Models.AddItem

@{
    ViewBag.Title = "ItemRent";
}
<!-- Modal -->

<div class="container">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aluguel de Item</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <form method="post" asp-controller="Item" asp-action="ItemRent">
                <div class="modal-body">

                    <div class="form-group">
                        <label asp-for="Name">Nome</label>
                        <input class="form-control" placeholder="Nome do item" asp-for="Name" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Descrição</label>
                        <input class="form-control" placeholder="Descrição" asp-for="Description" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="ReturnDate">Data de devolução</label>
                        <input class="form-control" type="date" placeholder="Devolução" asp-for="ReturnDate" value="10/10/2021"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>

            </form>
        </div>

    </div>
</div>

